<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/title"
            android:gravity="center"
            android:minHeight="70dp"
            android:text="評價"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_increEvaluation"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:background="@color/small_frame"
                android:text="評價 ↑"
                android:textColor="@color/text_dark"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_decreEvaluation"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:layout_marginStart="15dp"
                android:background="@color/small_frame"
                android:text="評價 ↓"
                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_star4"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="5★"
                android:layout_marginStart="10dp"
                android:background="@color/small_frame"
                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btn_star3"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="4★"
                android:layout_marginStart="10dp"
                android:background="@color/small_frame"

                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btn_star2"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="3★"
                android:layout_marginStart="10dp"
                android:background="@color/small_frame"
                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btn_star1"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="2★"
                android:layout_marginStart="10dp"
                android:background="@color/small_frame"
                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btn_star0"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="1★"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/small_frame"
                android:textColor="@color/text_dark"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>